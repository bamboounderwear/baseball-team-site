{
  "name": "baseball-team-site",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --persist-to=./.wrangler/state",
    "deploy": "wrangler deploy",
    "migrate": "wrangler d1 execute BASEBALL_DB --local --file=./migrations/000_init.sql",
    "build:frontend": "cd frontend && npm install && npm run build",
    "preview": "npm run build:frontend && wrangler dev --persist-to=./.wrangler/state",
    "build": "npm run build:frontend"
  },
  "devDependencies": {
    "wrangler": "3.88.0",
    "typescript": "^5.6.3",
    "@types/node": "^20.12.12",
    "drizzle-orm": "^0.32.2"
  }
}